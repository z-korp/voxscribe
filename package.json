{
  "name": "voxscribe",
  "version": "0.1.0",
  "description": "Record meetings, remove silence, transcribe locally with Whisper - 100% offline and private.",
  "main": "out/main/index.js",
  "author": {
    "name": "Cheelax",
    "email": "thomas@zkorp.xyz"
  },
  "homepage": "https://github.com/zkorp/voxscribe",
  "repository": {
    "type": "git",
    "url": "https://github.com/zkorp/voxscribe.git"
  },
  "bugs": {
    "url": "https://github.com/zkorp/voxscribe/issues"
  },
  "keywords": [
    "meeting",
    "transcription",
    "whisper",
    "speech-to-text",
    "offline",
    "electron",
    "audio",
    "recording"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "vitest",
    "build:win": "electron-vite build && electron-builder --win --config --publish never",
    "build:mac": "electron-vite build && electron-builder --mac --config --publish never",
    "build:linux": "electron-vite build && electron-builder --linux --config --publish never"
  },
  "build": {
    "appId": "com.zkorp.voxscribe",
    "productName": "VoxScribe",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/@ffmpeg-installer/",
        "to": "ffmpeg",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/@ffprobe-installer/",
        "to": "ffprobe",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "identity": null,
      "gatekeeperAssess": false,
      "hardenedRuntime": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png"
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@remotion/install-whisper-cpp": "^4.0.399",
    "archiver": "^7.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "optionalDependencies": {
    "electron-audio-loopback": "^1.0.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^31.7.7",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "jsdom": "^24.1.3",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.1.3"
  },
  "engines": {
    "node": ">=18.16.0",
    "npm": ">=9.0.0"
  }
}
